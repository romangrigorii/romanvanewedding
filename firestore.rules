rules_version = '2';
service cloud.firestore {
  match /databases/{database}/documents {
    function isAllowedWriter() {
      return request.auth != null
        && request.auth.token.email != null
        && request.auth.token.email.matches('(?i)^romanvgrigorii@gmail\\.com$');
    }

    // Allow only this signed-in email (password auth) to read/write.
    match /{document=**} {
      allow read, write: if isAllowedWriter();
    }
  }
}
